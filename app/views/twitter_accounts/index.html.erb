<div class='d-flex align-items-center justify-content-between p-3'>
    <h1> Twitter Accounts </h1>

    <%= button_to 'Connect a Twitter account', '/auth/twitter', data: {turbo: "false"}, method: :post, class:'btn btn-primary' %>
</div>

<% @twitter_accounts.each do |twitter_account| %>
    <div class='d-flex align-items-center p-3 justify-content-between card card-body' style="flex-direction: row;">
        <div class='d-flex align-items-center me-5 gap-3'>
            <%= image_tag twitter_account.image, class:'rounded-circle'%>
            <%= link_to "@#{twitter_account.username}", "https://twitter.com/#{twitter_account.username}", target: :_blank %>
        </div>
        <%= button_to 'Disconnect', twitter_account, method: :delete, data: { turbo_confirm: 'Are you sure?'}, class:'btn btn-danger' %>
    </div>
<% end %>